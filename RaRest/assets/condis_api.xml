<?xml version="1.0" encoding="UTF-8"?>
<api baseurl="http://devel.tempos21.es/mobiret-bodevel/rest">
	<logger show="true">
		<include type="service" show="true"/>
		<include type="param" />
		<include type="header"/> 
	</logger>
	<service name="jsonresponse" default="true">
		<header name="accept-response">application/json</header>
		<param mandatory="true" name="client" type="query">condis</param>
		<param mandatory="true" name="appversion" type="query"/>
		<pre name="com.rarest.test.PrepTest"/>
		<post name="com.rarest.test.PostTest"/>
	</service>
	
	<!-- get ads service -->
	<service name="getAds" url="/ads/{id}/list.json" verb="get">
		<param name="appversion">4</param>
		<param name="id" type="rest"></param>
		
		
	</service>

	<service name="getPos" url="/pos/list.json" verb="get">
		<param name="appversion">2</param>
	</service>
	
</api>